<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
 <!--  마이바티스 설정 파일
 	=> 데이터베이스 연결 , 쿼리가 적힌 매퍼 설정파일을 읽어온다.
  -->
<configuration>

  <typeAliases> <!-- DB에서 데이터를 전달하거나 DB에서 데이터를 읽어올때 사용하는 객체를 기록 -->
  	<typeAlias type="spring.vo.Member" alias="member"/>
  	<typeAlias type="spring.vo.RegisterRequest" alias="RegisterRequest"/>
  	<typeAlias type="spring.vo.Notice" alias="notice"/>
  	<typeAlias type="spring.vo.Product" alias="product"/>
  	<typeAlias type="spring.vo.Option" alias="option"/>
  	<typeAlias type="spring.vo.Category" alias="category"/>
  	<typeAlias type="spring.vo.Cart" alias="cart"/>
  	<typeAlias type="spring.vo.Review" alias="review"/>
  	<typeAlias type="spring.vo.Qna" alias="qna"/>
  </typeAliases>

</configuration>